<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   	<Button 
   	    android:id="@+id/notify"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="Notify"
   	    />
   	<Button 
   	    android:id="@+id/update"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="Update"
   	    />
   	<Button 
   	    android:id="@+id/cancelnotify"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="Cancel Notify"
   	    />
   	<TextView 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="new Notification"
   	    />
   	<Button 
   	    android:id="@+id/newnotify"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="New Notify"
   	    />
   	<Button 
   	    android:id="@+id/newupdate"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="New Update"
   	    />
   	<Button 
   	    android:id="@+id/newbignotify"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="New Big Notify"
   	    />
   	<Button 
   	    android:id="@+id/newcancelnotify"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="New Cancel Notify"
   	    />

</LinearLayout>
